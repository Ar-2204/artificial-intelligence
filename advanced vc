rooms = {}

room_names = ["Kitchen", "Hall", "Bedroom-1", "Bedroom-2", "Store Room", "Terrace"]

for room in room_names:
    valid = False
    while not valid:
        parts = list(map(int, input(f"Enter 4 values for {room} (0=clean, 1=dirty) separated by space: ").split()))
        if len(parts) == 4 and all(p in [0, 1] for p in parts):
            rooms[room] = parts
            valid = True
        else:
            print("Invalid input. Enter exactly four values (0 or 1).")

def analyze(parts):
    clean = parts.count(0)
    dirty = parts.count(1)
    total = len(parts)
    pending = dirty
    return clean * 100 / total, dirty * 100 / total, pending * 100 / total

print("\nPERFORMANCE TABLE")
print("Room\t\tStatus\t\tClean%\tDirty%\tPending%")

for room, parts in rooms.items():
    c, d, p = analyze(parts)
    status = "Cleaned" if d == 0 else "Not Cleaned"
    print(f"{room:12}\t{status:10}\t{c:5.1f}\t{d:5.1f}\t{p:5.1f}")

print("\nVACUUM CLEANER LOCATION TABLE")
print("Location\tStatus\t\tPercentage")

for room, parts in rooms.items():
    sections = {
        "Left": [parts[0]],
        "Center": parts[1:3],
        "Right": [parts[3]]
    }
    for loc, data in sections.items():
        clean = data.count(0)
        total = len(data)
        status = "Clean" if clean == total else "Dirty"
        pct = clean * 100 / total
        print(f"{loc:7}\t\t{status:5}\t\t{pct:5.1f}")

for room in rooms:
    rooms[room] = [0, 0, 0, 0]

print("\nPERCEPT SEQUENCE TABLE")
print("Percept\t\tAction\t\tStatus")

for room in rooms:
    print(f"{room:12}\tSUCK\t\tCleaned")

print("\nAll rooms are cleaned.")
print("Thank you for using BUNTY â€“ The Vacuum Cleaner Agent")
